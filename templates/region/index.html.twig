{% extends 'base.html.twig' %}

{% set label_title = "Gestión Regiones" %}

{% block title %}{{ label_title }}{% endblock %}

{% block body %}
    <h1>{{ label_title | upper }}</h1>
    <br />
    <a href="{{ path('region_new') }}" title="Añadir Nueva Región">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
    <br />
    <table class="table table-bordered table-striped list-table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Región</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for region in regions %}
                <tr scope="row">
                    <td>
                        <a href="{{ path('region_show', {'id': region.id}) }}"  title="Ver Ficha Región {{ region.nombre }}">
                            {{ region.nombre }}
                        </a>
                        <a href="{{ path('region_edit', {'id': region.id}) }}" 
                              title="Editar Región {{ region.nombre }}">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('provincia_index') }}" title="Ir a Gestión Provincias">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                        </a>
                        <a href="{{ path('comuna_index') }}" title="Ir a Gestión Comunas">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                        </a>
                        <a href="{{ path('subsector_index') }}" title="Ir a Gestión Sectores">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                        </a>
                        <a href="{{ path('localidad_index') }}" title="Ir a Gestión Localidades">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}