<form class="delete-form" method="post" action="{{ path('region_delete', {'id': region.id}) }}" onsubmit="return confirm('¿Estás seguro?, vas a BORRAR la Región {{ region.nombre }}, esta acción no puede revertirse.');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ region.id) }}">
    <a href="#" onclick="$('.delete-form').submit();" title="Borrar Provincia {{ region.nombre }}">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </a>
</form>