{% extends 'base.html.twig' %}

{% set label_title = "Gestión de Provincias" %}

{% block title %}{{ label_title }}{% endblock %}

{% block body %}
    <h1>{{ label_title }}</h1>

    <a class="btn btn-primary" role="button" href="{{ path('provincia_new') }}">Añadir Provincia</a>

    <table class="table list-table">
        <thead class="tab-title">
            <tr>
                <th>Provincia</th>
                <th>Región</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for provincium in provincias %}
                <tr>
                    <td><a href="{{ path('provincia_show', {'id': provincium.id}) }}" title="Ver Ficha {{ provincium.nombre }}">
                            {{ provincium.nombre }} <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </a></td>
                    <td><a href="{{ path('region_show', {'id': provincium.region.id}) }}"  title="Editar {{ provincium.region.nombre }}">
                            {{ provincium.region.nombre }} <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </a></td>
                    <td><a href="{{ path('provincia_edit', {'id': provincium.id}) }}" title="Editar {{ provincium.nombre }}">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a><a href="{{ path('comuna_index') }}" title="Gestionar Comunas">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                        </a><a href="{{ path('localidad_index') }}" title="Gestionar Localidades">
                            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                        </a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}