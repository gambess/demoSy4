{% extends 'base.html.twig' %}

{% block title %}Listado de Provincias{% endblock %}

{% block body %}
    <h1>Listado de Provincias</h1>

    <table class="table list-table">
        <thead class="tab-title">
            <tr>
                <th>Provincia</th>
                <th>Región</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for provincium in provincias %}
                <tr>
                    <td>{{ provincium.nombre }}</td>
                    <td>{{ provincium.region.nombre }}</td>
                    <td>
                        <a href="{{ path('provincia_show', {'id': provincium.id}) }}">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>Ver ficha
                        </a>
                        <a href="{{ path('provincia_edit', {'id': provincium.id}) }}">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>Editar
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('provincia_new') }}">Añadir nueva Provincia</a>
{% endblock %}