{% extends 'base.html.twig' %}

{% block title %}Listado de Localidades{% endblock %}

{% block body %}
    <center><h1>Listado de Localidades</h1></center>
    <br/>
    <br/>

    <div class="container">
        <table class="table table-hover list-table">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Sector</th>
                    <th>Altura</th>
                    <th>Personas</th>
                    <th>Casas</th>
                    <th>Pararrayos</th>
                    <th>Prioridad</th>
                    <th>AlumbradoPublico</th>
                    <th>Motivo</th>

                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for localidad in localidads %}
                    <tr>
                        <td><a href="{{ path('localidad_show', {'id': localidad.id}) }}">{{ localidad.nombre }}</a></td>
                        <td>{{ localidad.subsector.nombre }}</td>
                        <td>{{ localidad.altura }}</td>
                        <td>{{ localidad.personas }}</td>
                        <td>{{ localidad.casas }}</td>
                        <td>{{ localidad.pararrayos }}</td>
                        <td>{{ localidad.prioridad }}</td>
                        <td>{{ localidad.alumbradoPublico }}</td>
                        <td>{{ localidad.motivo }}</td>
                        <td>
                            <a href="{{ path('localidad_edit', {'id': localidad.id}) }}">Editar</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <br/>
    <a href="{{ path('localidad_new') }}">AÃ±adir Localidad</a>
{% endblock %}
