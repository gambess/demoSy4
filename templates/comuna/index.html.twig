{% extends 'base.html.twig' %}

{% block title %}Listado de Comunas{% endblock %}

{% block body %}
    <h1>Listado de Comunas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Comuna</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for comuna in comunas %}
            <tr>
                <td>{{ comuna.nombre }}</td>
                <td>
                    <a href="{{ path('comuna_show', {'id': comuna.id}) }}">show</a>
                    <a href="{{ path('comuna_edit', {'id': comuna.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comuna_new') }}">Create new</a>
{% endblock %}
