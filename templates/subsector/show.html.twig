{% extends 'base.html.twig' %}

{% set title_label = "Ficha del Sector " ~ subsector.nombre  %}

{% block title %}{{ title_label }}{% endblock %}

{% block body %}
    <h1>{{ title_label | upper }}</h1>
    <br />
    <table class="table">
        <tbody>
            <tr>
                <th class="alert alert-info" role="alert">Coordenadas</th>
                <td>{{ subsector.latitud }} , {{ subsector.longitud }}</td>
            </tr>
            <tr>
                <th class="alert alert-info" role="alert">Altura</th>
                <td>{{ subsector.altura }}</td>
            </tr>
            <tr>
                <th class="alert alert-info" role="alert">Descripci√≥n</th>
                <td>{{ subsector.descripcion }}</td>
            </tr>
            <tr>
                <th class="alert alert-info" role="alert">Acciones</th>
                <td>
                    <a href="{{ path('subsector_edit', {'id': subsector.id}) }}" title="Ir a Editar Sector {{ subsector.nombre }}">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('region_index') }}"  title="Ir a Gestiona Regiones">
                        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('provincia_index') }}" title="Ir a Gestiona Provincias">
                        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('comuna_index') }}" title="Ir a Gestiona Comunas">
                        <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('localidad_index') }}" title="Ir a Gestiona Localidades">
                        <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    </a>
                    {{ include('subsector/_delete_form.html.twig') }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
