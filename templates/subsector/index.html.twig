{% extends 'base.html.twig' %}

{% block title %}Subsector index{% endblock %}

{% block body %}
    <h1>Subsector index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Altura</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subsector in subsectors %}
            <tr>
                <td>{{ subsector.id }}</td>
                <td>{{ subsector.codigo }}</td>
                <td>{{ subsector.nombre }}</td>
                <td>{{ subsector.altura }}</td>
                <td>{{ subsector.descripcion }}</td>
                <td>
                    <a href="{{ path('subsector_show', {'id': subsector.id}) }}">show</a>
                    <a href="{{ path('subsector_edit', {'id': subsector.id}) }}">edit</a>
                    <a href="{{ path('summary_subsector', {'id': subsector.id}) }}">show summary</a>
                    <a href="{{ path('summary_subsector_by_priority', {'id': subsector.id}) }}">show summary by priority</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('subsector_new') }}">Create new</a>
{% endblock %}
